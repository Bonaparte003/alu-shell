#!/usr/bin/env bash
# Init script to manage manage_my_process.sh
pid_file="/var/run/my_process.pid"
process_name="manage_my_process"

start_process() {
    if [ -f "$pid_file" ]; then
        echo "$process_name is already running."
    else
        ./$process_name &
        echo "$!" > "$pid_file"
        echo "$process_name started."
    fi
}

stop_process() {
    if [ -f "$pid_file" ]; then
        echo "Stopping $process_name..."
        kill "$(cat "$pid_file")"
        rm "$pid_file"
        echo "$process_name stopped."
    else
        echo "$process_name is not running."
    fi
}

restart_process() {
    stop_process
    start_process
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
