#!/bin/bash

# Init script to manage manage_my_process.sh

# Path to the process script and PID file
PROCESS_SCRIPT="/path/to/manage_my_process.sh"
PIDFILE="/var/run/my_process.pid"

start() {
    if [ -f "$PIDFILE" ]; then
        echo "manage_my_process is already running"
        return
    fi
    echo "Starting manage_my_process"
    nohup bash "$PROCESS_SCRIPT" &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$PIDFILE" ]; then
        echo "manage_my_process is not running"
        return
    fi
    echo "Stopping manage_my_process"
    kill -SIGTERM "$(cat "$PIDFILE")"
    rm -f "$PIDFILE"
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
